{
  "name": "hosts-editor",
  "version": "1.0.2",
  "private": true,
  "main": "electron-dist/main.js",
  "description": "Hosts Editor Desktop App built with Vite and Electron",
  "author": "Robert Michalski",
  "scripts": {
    "dev": "concurrently \"yarn dev:vite\" \"yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && ELECTRON_START_URL=http://localhost:5173 npx electron electron-dist/main.js",
    "build:main": "tsc -p tsconfig.electron.json",
    "build": "vite build && yarn build:main",
    "start": "concurrently \"vite preview\" \"electron electron-dist/main.js\"",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@material-tailwind/react": "2.1.4",
    "class-variance-authority": "^0.7.1",
    "electron-updater": "6.6.2",
    "iconoir-react": "^7.11.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.63.0",
    "sudo-prompt": "^9.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.7",
    "@types/semver": "^7.7.1",
    "@types/yup": "^0.32.0",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "10.4.20",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "postcss": "8.4.47",
    "sass": "^1.93.2",
    "tailwindcss": "3.4.14",
    "typescript": "5.9.3",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.nurbyte.hostseditor",
    "productName": "Hosts Editor",
    "publish": [
      {
        "provider": "github",
        "owner": "michalskirobert",
        "repo": "hosts-editor",
        "releaseType": "release"
      }
    ],
    "files": [
      "electron-dist/**/*",
      "dist/web/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
